#!/usr/bin/env ruby
require 'highline/import'

def print_error_message
  puts "[Help] Run as: ./ash_tray new\n"
end

if ARGV.size == 1 and ARGV[0] == "manage"
  choose do |menu|
    menu.prompt = ""

    cigars_controller = CigarsController.new
    menu.choice('Add a cigar') { say("") }
    menu.choice('List all scenarios') { cigars_controller.index }
    menu.chioce('Exit') { say("Peace Out!\n") }
  end
else
  puts "[Help] Run as: ./ash_tray manage"
end
